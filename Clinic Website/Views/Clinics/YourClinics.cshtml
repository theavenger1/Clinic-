@model IEnumerable<Clinic_Website.Models.Clinic>
 
@{
    ViewBag.Title = "Your Clinics";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>YourClinics</h2>

 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ClinicName)
        </th>
      

       
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
       

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ClinicName)
            </td>
          

           
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            
            <td>

               @Html.ActionLink("View App","ClinicApps", "Appointment", new { id = item.Id },htmlAttributes: new { @class = "" }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </td>
        </tr>
    }

</table>
