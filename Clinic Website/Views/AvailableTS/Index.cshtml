@model IEnumerable<Clinic_Website.Models.AvailableTimesList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DayList.DayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayList.Clinic.ClinicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slot_start)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DayList.DayName)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.DayList.Clinic.ClinicName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Taken)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Slot_start)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
